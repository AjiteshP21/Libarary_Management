@model Libarary_Management.tblBook

@{
    ViewBag.Title = "Delete Book";
}

<h2>Delete Book</h2>

<div class="alert alert-warning">
    <strong>Warning!</strong> Are you sure you want to delete this book? This action cannot be undone.
</div>

<!-- Book Details -->
<table class="table table-bordered">
    <tr>
        <th>Title</th>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <th>Category</th>
        <td>@Model.CategoryType</td>
    </tr>
    <tr>
        <th>Author</th>
        <td>@Model.AuthorName</td>
    </tr>
    <tr>
        <th>Publication</th>
        <td>@Model.PublicationName</td>
    </tr>
    <tr>
        <th>ISBN</th>
        <td>@Model.ISBN</td>
    </tr>
</table>

<!-- Confirmation Buttons -->
@using (Html.BeginForm("DeleteConfirmed", "Books", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("id", Model.Id)
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Books")" class="btn btn-secondary">Cancel</a>
}
