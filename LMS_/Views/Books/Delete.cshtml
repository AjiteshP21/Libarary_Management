﻿@model LMS_.tblBook

@{
    ViewBag.Title = "Delete Book";
}

<div class="container mt-4">
    <h2>Delete Book</h2>

    <p>Are you sure you want to delete the book "<strong>@Model.Title</strong>" by "<strong>@Model.AuthorName</strong>"?</p>

    @using (Html.BeginForm("Delete", "Book", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a href="@Url.Action("Index", "Book")" class="btn btn-secondary">Cancel</a>
        </div>
    }
</div>